<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BDFFB"
    tools:context=".Home">

    <TextView
        android:id="@+id/lbl_welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text to replace"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <Button
        android:id="@+id/btn_addProject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_weight=".75"
        android:backgroundTint="#0D9E14"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:text="Add a project"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_welcome_home" />

    <Button
        android:id="@+id/btn_viewProjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#198ED0"
        android:text="View projects"
        app:layout_constraintEnd_toEndOf="@+id/btn_addProject"
        app:layout_constraintStart_toStartOf="@+id/btn_addProject"
        app:layout_constraintTop_toBottomOf="@+id/btn_addProject" />

    <Button
        android:id="@+id/btn_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#0F4A8E"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swt_notificationtoggle" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swt_notificationtoggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:thumbTint="@drawable/switchcolour"
        app:trackTint="@drawable/track"

        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewProjects" />
</androidx.constraintlayout.widget.ConstraintLayout>