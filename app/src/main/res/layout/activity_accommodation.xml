<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG"
    tools:context=".Accommodation">

    <TextView
        android:id="@+id/txt_accommodation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="@string/title_viewaccommodation"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greenSecondary"
        app:itemIconTint="@color/icon_colours"
        app:itemTextColor="@color/icon_colours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <ImageView
        android:id="@+id/img_fmhousebeds_main"
        android:layout_width="357dp"
        android:layout_height="248dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_accommodation_title"
        app:srcCompat="@drawable/farmhousebed" />

    <TextView
        android:id="@+id/lbl_fmhouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/title_farmhousebeds"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_fmhousebeds_main"
        app:layout_constraintStart_toStartOf="@+id/img_fmhousebeds_main"
        app:layout_constraintTop_toBottomOf="@+id/img_fmhousebeds_main" />

    <Button
        android:id="@+id/btn_moredetails_fmhouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/btnText_viewmore"
        app:layout_constraintEnd_toEndOf="@+id/lbl_fmhouse"
        app:layout_constraintStart_toStartOf="@+id/lbl_fmhouse"
        app:layout_constraintTop_toBottomOf="@+id/lbl_fmhouse" />

    <Button
        android:id="@+id/btn_next_pg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/btnText_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/btn_moredetails_fmhouse"
        app:layout_constraintTop_toBottomOf="@+id/lbl_fmhouse" />
</androidx.constraintlayout.widget.ConstraintLayout>